<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <table name="product" resource="default" engine="innodb" comment="Product Table">
        <column xsi:type="int" name="id" />
        <column xsi:type="varchar" name="sku"/>
        <column xsi:type="varchar" name="name"/>
        <column xsi:type="int" name="category_id"/>
        <column xsi:type="varchar" name="brand"/>
        <column xsi:type="float" name="price"/>
        <column xsi:type="int" name="tax_percent"/>
        <column xsi:type="varchar" name="status"/>
        <column xsi:type="varchar" name="visibility"/>
        <column xsi:type="varchar" name="product_type"/>
        <column xsi:type="timestamp" name="created_at"/>
        <column xsi:type="timestamp" name="updated_at"/>
    </table>
    <table name="category" resource="default" engine="innodb" comment="Category Table">
        <column xsi:type="int" name="id" />
        <column xsi:type="varchar" name="name"/>
        <column xsi:type="int" name="parent_id"/>
        <column xsi:type="varchar" name="slug"/>
        <column xsi:type="varchar" name="status"/>
        <column xsi:type="timestamp" name="created_at"/>
    </table>
    <table name="category_product" resource="default" engine="innodb" comment="Category Product Table">
        <column xsi:type="int" name="id" />
        <column xsi:type="int" name="category_id"/>
        <column xsi:type="int" name="product_id"/>
    </table>
</schema>